.text-center.col-sm-4.mx-auto
  %h2.my-5 新規登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.form-group
      = f.label :name, class: "sr-only"
      = f.text_field :name, placeholder: "Name", class: "form-control"
    .field.form-group
      = f.label :email, class: "sr-only"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control"
    .field.form-group
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password"
    .field.form-group
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password"
    .actions.btn
      = f.submit "Sign up", class: "btn-lg btn-primary btn-block"
