%main{:role => "main"}
  %section
    %h1.text-center.jumbotron-heading.my-4 NewProducts
    .h5.text-center 商品登録
    .container
      .card.mb-3.mx-auto{:style => "max-width: 850px;"}
        .row.no-gutters
          .col-md-4
            = image_tag src='782DFD9F-69B5-46D5-8904-B517906225AA.JPG', class: "card-img-top",style:"object-fit: contain;",height: "216"
          .col-md-8
            .card-body
              .form-group.row
                %label.col-sm-5.col-form-label.col-form-label-lg{:for => "colFormLabelLg"} 商品名
                %input.form-control.form-control-lg.col-6{:placeholder => "Item name", :type => "text"}/
              .form-group.row
                %label.col-sm-5.col-form-label.col-form-label-lg{:for => "inlineFormCustomSelectPref"} 販売価格(¥)
                %input.form-control.col-6{:placeholder => "Price", :type => "text"}/
              .row
                %label.col-sm-5.col-form-label.col-form-label-lg{:for => "inlineFormCustomSelectPref"} 材料価格の合計(¥)
                %input.form-control.col-6{:placeholder => "Total cost", :type => "text"}/
      .add-materials
      %button.btn.btn-primary.btn-lg.mx-auto.d-block.mt-3.mb-5{:type => "button",style: "width:200px;"} 登録する
      %h2.text-center.jumbotron-heading Materials
      %input.form-control.form-control-lg.col-6.mx-auto{:placeholder => "追加したい材料を検索", :type => "text"}/

